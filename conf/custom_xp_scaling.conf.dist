CustomXPScaling.LevelXP.Scaling.30-39 = 1.0
CustomXPScaling.LevelXP.Scaling.40-49 = 1.2
CustomXPScaling.LevelXP.Scaling.50-59 = 1.3
CustomXPScaling.LevelXP.Scaling.60-69 = 1.3
CustomXPScaling.LevelXP.Scaling.70-79 = 1.3

CustomXPScaling.KillXP.Enable = 1
CustomXPScaling.KillXP.Scaling = 2.2

CustomXPScaling.RareXP.Enable = 1
CustomXPScaling.RareXP.Scaling = 3.0

CustomXPScaling.QuestXP.Enable = 1
CustomXPScaling.QuestXP.Scaling = 0.4

CustomXPScaling.ExploreXP.Enable = 1
CustomXPScaling.ExploreXP.Scaling = 5.0

CustomXPScaling.ProfessionsXP.Enable = 1
