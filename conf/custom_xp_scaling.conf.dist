[worldserver]

################################################################################################################
# Custom XP Scaling Configuration
################################################################################################################
#
#    CustomXPScaling.Enable
#        Description: Enable Custom XP Scaling
#        Default:     1 - Enabled
#                     0 - Disabled
#

CustomXPScaling.Enable = 1
CustomXPScaling.Announce = 1
